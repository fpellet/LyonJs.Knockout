<header>
    <div>
        <form method="post" data-bind="submit: search">
            <h1>LyonJs</h1>
            <div>
                <input type="search" placeholder="Search an unicorn..." data-bind="value: searchValue, valueUpdate: 'afterkeydown'" />
                <input type="search" placeholder="Reverse search..." data-bind="value: reverseValue, valueUpdate: 'afterkeydown'" />
                <button type="submit">Search</button>
            </div>
        </form>
    </div>
</header>
<div id="body">
    <!-- ko if: filtedResults().length > 0 -->
    <aside>
        <ul data-bind="foreach: filtedResults">
            <li data-bind="click: $parent.select, css: { selected: IsSelected }">
                <img data-bind="attr: { src: ImageUri, alt: Name }" />
                <span data-bind="text: Name"></span>
            </li>
        </ul>
    </aside>
    <!-- ko if: itemSelected -->
    <div>
        <!-- ko with: itemSelected -->
        <img data-bind="attr: { src: ImageUri, alt: Name }" />
        <p data-bind="text: Name2"></p>
        <p>Keyword : 
            <!-- ko foreach: Keywords -->
            <span data-bind="text: $data"></span>
            <!-- /ko -->
        </p>
        <p>Creation date : 04/03/2013</p>
        <!-- /ko -->
    </div>
    <!-- /ko -->
    <!-- /ko -->
</div>
